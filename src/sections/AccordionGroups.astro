---
import { parseMarkdown } from '@lib/markdown';

interface AccordionItem {
  title: string;
  content: string;
}

interface AccordionGroup {
  title: string;
  description?: string | undefined;
  accordions: AccordionItem[];
}

interface Props {
  id?: string | undefined;
  heading: string;
  groups: AccordionGroup[];
}

const { id = 'wissenswertes', heading, groups }: Props = Astro.props;

const groupsWithHtml = groups.map((group) => ({
  ...group,
  descriptionHtml: group.description
    ? parseMarkdown(group.description)
    : undefined,
  accordions: group.accordions.map((accordion) => ({
    ...accordion,
    contentHtml: parseMarkdown(accordion.content),
  })),
}));
---

<section id={id} class="accordions">
  <h2 class="section-heading animate right">{heading}</h2>

  {
    groupsWithHtml.map((group) => (
      <div class="group animate">
        <h3 class="group-heading">{group.title}</h3>
        <div class="line" />
        {group.descriptionHtml && (
          <div class="group-description" set:html={group.descriptionHtml} />
        )}

        <div class="accordion-container">
          {group.accordions.map((accordion) => (
            <div class="accordion">
              <button class="btn" type="button" aria-expanded="false">
                <h4>{accordion.title}</h4>
                <span class="icon">
                  <img
                    src="/chevron-down.svg"
                    alt=""
                    loading="lazy"
                    decoding="async"
                  />
                </span>
              </button>
              <div class="accordion-content" aria-hidden="true">
                <div class="accordion-text">
                  <div set:html={accordion.contentHtml} />
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))
  }
</section>

<style lang="scss">
  .accordions {
    .group {
      max-width: 680px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 160px;

      @include view-mobile {
        margin-bottom: 120px;
      }

      &:last-child {
        margin-bottom: 0;
      }

      &:nth-child(even) {
        margin-right: auto;
      }

      &:nth-child(odd) {
        margin-left: auto;
      }

      .group-heading {
        text-transform: uppercase;
        letter-spacing: 1px;
        line-height: 1.4;
        width: 100%;
        word-break: break-word;
        hyphens: auto;
        hyphenate-limit-chars: 4 4 4;
        font-size: 1.75rem;
      }

      .line {
        background-color: var(--accent);
        width: 50%;
        height: 1px;
      }

      .group-description {
        @include copy;
      }

      .accordion-container {
        margin-top: 20px;
        width: 100%;

        .accordion {
          width: 100%;
          border-bottom: 1px solid var(--accent);

          .btn {
            justify-content: space-between;
            display: flex;
            gap: 32px;
            align-items: start;
            padding: 24px 0;
            width: 100%;
            appearance: none;
            cursor: pointer;
            background-color: transparent;
            border: none;
            border-radius: 2px;

            .icon {
              flex: 0 0 32px;
              display: flex;
              justify-content: center;
              align-items: center;
              height: 32px;
              transition: all 0.2s ease-in-out;

              img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                object-position: center;
                transition: all 0.2s ease-in-out;
                transform: rotate(0deg);
              }

              @include view-mobile {
                flex: 0 0 24px;
                height: 24px;
              }
            }

            h4 {
              margin: 0;
              line-height: 1.4;
              text-transform: uppercase;
              text-align: start;

              @include view-mobile {
                word-break: break-word;
                hyphens: auto;
                hyphenate-limit-chars: 4 4 4;
              }
            }

            @include view-mobile {
              padding: 20px 0;
            }
          }

          .accordion-content {
            transition: all 0.2s ease-in-out;
            max-height: 0;
            overflow: hidden;

            .accordion-text {
              padding: 20px 0;
              padding-top: 4px;
            }
          }

          &.active {
            .btn {
              .icon {
                img {
                  transform: rotate(-180deg);
                }
              }
            }
          }
        }
      }
    }
  }
</style>

<script>
  document.querySelectorAll('.accordion .btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const accordion = btn.closest('.accordion');
      const content = accordion?.querySelector(
        '.accordion-content',
      ) as HTMLElement;
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';

      btn.setAttribute('aria-expanded', (!isExpanded).toString());
      content?.setAttribute('aria-hidden', isExpanded.toString());

      if (isExpanded) {
        accordion?.classList.remove('active');
        content.style.maxHeight = '0';
      } else {
        accordion?.classList.add('active');
        content.style.maxHeight = content.scrollHeight + 'px';
      }
    });
  });
</script>
